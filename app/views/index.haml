%section
  - if current_user
    #new-link
      %form(action="/links" method="post")
        url 
        %input(type="text" name="url")
        title
        %input(type="text" name="title")
        tags
        %input(type="text" name="tags")
        description
        %input(type="text" name="description")
        %button(type="submit" value="Add link")
          Add link
  - else
    #add_links_message
      %p
        Please sign in to add links

%h2
  Current links:

- if @links != nil
  %ul
    - @links.each do |link|
      - link_url = link.url
      %li
        %a(href=link_url)
          =link.title
        #description
          =link.description
        #tags
          -tags = link.tags.to_a
          -tags.each do |tag|
            - tag_name = tag.text
            - tag_url = "/tags/#{tag_name}"
            %a(href=tag_url)
              =tag_name
        #user
          -user_id = link.user_id
          -user = User.first(:id => user_id)
          ="added by #{user.username}"

%aside
%h2
  Tags

- if @tags != nil
  - @tags.each do |tag|
    - tag_name = tag.text
    - tag_url = "/tags/#{tag_name}"
    %li
      %a(href=tag_url)
        = tag_name